{% extends 'Template.html.twig' %}


{% block body%}


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Utilisateurs</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Utilisateurs</a></li>
              <li class="breadcrumb-item active">Liste</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
        <!-- /.content-header -->
    <section class="content">
    	<div class="container-fluid">
    		<div class="row">
    			<div class="col-md-12">
    				<div class="card">
    					<div class="card-header">
			                <h3 class="card-title">Liste des utilisateurs</h3>
			                <div class="card-tools">
			         			<div class="pull-right">
									<a href="{{ path('utilisateursCreate') }}" class="btn btn-block bg-gradient-success"> Create </a>
			         			</div>		                  		                    
			                </div>
			             </div>
    					<div class="card-body">
			                <table class="table">
			                  <thead>
			                    <tr>
			                      <th style="width: 10px">Id</th>
			                      <th class="text-center">Nom</th>
			                      <th class="text-center">Prenom</th>
			                      <th class="text-center">Date de naissence</th>
			                      <th class="text-center">Sexe</th>
			                      <th class="text-center">Action</th>
			                    </tr>
			                  </thead>
			                  <tbody>
			                  	{%for u in users %}
			                    <tr>
			                      <td class="text-center">{{u.id}}</td>
			                      <td class="text-center">{{u.nom}}</td>
			                      <td class="text-center">{{u.prenom}}</td>
			                      <td class="text-center">{{u.dns|date("d/m/Y")}}</td>
			                      {% if (u.sexe == 1) %}
			                      <td class="text-center">Homme</td>
			                      {%endif%}
			                      {% if (u.sexe == 0) %}
			                      <td class="text-center">Femme</td>
			                      {%endif%}
			                      <td class="text-center">
					                <div class="btn-group btn-group-sm">
			                        <a href="#" class="btn btn-info"><i class="fas fa-eye"></i></a>&nbsp;&nbsp;
			                        <a href="#" class="btn btn-warning"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;
			                        <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
			                        </div>
			                      </td>
			                    </tr>
			                    {% endfor %}
			                  </tbody>
			                </table>
              			</div>
    				</div>
    				
    			</div>
    			
    		</div>
    	</div>
    </section>    
  </div>
  <!-- /.content-wrapper -->


{% endblock %}
