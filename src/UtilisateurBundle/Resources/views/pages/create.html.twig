{% extends 'Template.html.twig' %}


{% block body%}


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (pages header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Utilisateurs</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Utilisateurs</a></li>
              <li class="breadcrumb-item active">Create</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
        <!-- /.content-header -->
    <section class="content">
    	<div class="container-fluid">
          <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Création d'un nouveau utilisateur</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                  {{ form_start(form) }}
                  <div class="card-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Nom :</label>
                      <input type="text" id="form_nom" name="form[nom]" class="form-control" placeholder="Saisir le nom">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Prenom :</label>
                      <input type="text" id="form_prenom" name="form[prenom]" class="form-control" placeholder="Saisir le prénom">
                    </div>
                    <div class="form-group">
                      <label>Date de naissence:</label>
                      <div class="input-group date"  id="reservationdate" data-target-input="nearest">
                        <input type="date" name="form[dns]" class="form-control" placeholder="MM/DD/YYYY">
                        <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label>Sexe :</label>
                      <select class="form-control" name="form[sexe]">
                        <option>Select Sexe</option>
                        <option value="1">Homme</option>
                        <option value="0">Femme</option>
                      </select>
                    </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <input type="reset" value="Annuler" class="btn btn-danger">
                    <input type="submit" value="Create" name="form[save]" class="btn btn-primary float-right">
                    <input type="hidden" name="form[_token]" value="{{ form._token.vars.value }}" />
                  </div>
                    {{ form_start(form) }}
              </div>
            </div>
    	</div>
          </div>
          <div class="col-md-1"></div>
        </div>
    </section>
  <!-- /.content-wrapper -->

{%endblock%}


