{% extends 'Template.html.twig' %}


{% block body%}


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (pages header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Matériel</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Matériel</a></li>
              <li class="breadcrumb-item active">Liste</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
        <!-- /.content-header -->
    <section class="content">
    	<div class="container-fluid">
    		<div class="row">
    			<div class="col-md-12">
    				<div class="card">
    					<div class="card-header">
			                <h3 class="card-title">Liste des Matériels</h3>
			                <div class="card-tools">
			         			<div class="pull-right">
									<a href="{{ path('materielCreate') }}" class="btn btn-block bg-gradient-success"> Ajouter</a>
			         			</div>		                  		                    
			                </div>
			             </div>
    					<div class="card-body">
			                <table class="table">
			                  <thead>
			                    <tr>
			                      <th style="width: 10px">Id</th>
			                      <th class="text-center">Désignation</th>
			                      <th class="text-center">Quantité</th>

			                    </tr>
			                  </thead>
			                  <tbody>
							  {%for u in materiel %}
							  <tr>
								  <td class="text-center">{{u.id}}</td>
								  <td class="text-center">{{u.designation}}</td>
								  <td class="text-center">{{u.quantite}}</td>


			                      <td class="text-center">
					                <div class="btn-group btn-group-sm">
										<a class="btn btn-warning" href="{{ path('materielEdit', {'id': u.id}) }}"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;
										<a class="btn btn-danger" href="{{ path('materielDelete', {'id': u.id}) }}"><i class="fas fa-trash"></i></a>
			                        </div>
			                      </td>
			                    </tr>
							  {% endfor %}
			                  </tbody>
			                </table>
              			</div>
    				</div>
    				
    			</div>
    			
    		</div>
    	</div>
    </section>    
  </div>
  <!-- /.content-wrapper -->




{% endblock %}
