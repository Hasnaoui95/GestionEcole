{% extends 'Template.html.twig' %}


{% block body%}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (pages header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Administraur</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Administraur</a></li>
                        <li class="breadcrumb-item active">Ajouter</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Modifier Administraur</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        {{ form_start(form) }}
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Username :</label>
                                <input type="text" id="form_nom" value="{{ user.username }}" name="form[username]" class="form-control" placeholder="Saisir le nom">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nom :</label>
                                <input type="text" id="form_nom"  value="{{ user.nom}}" name="form[nom]" class="form-control" placeholder="Saisir le nom">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Prenom :</label>
                                <input type="text" id="form_prenom" value="{{ user.prenom }}" name="form[prenom]" class="form-control" placeholder="Saisir le prÃ©nom">
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <div class="input-group date"  id="reservationdate" data-target-input="nearest">
                                    <input type="text" value="{{ user.email }}"  name="form[email]" class="form-control" placeholder="Saisir l'email">
                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Password:</label>
                                <div class="input-group date"  id="reservationdate" data-target-input="nearest">
                                    <input type="password" value="{{ user.password }}"  name="form[password]" class="form-control" placeholder="Password">
                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <input type="reset" value="Annuler" class="btn btn-danger">
                                <input type="submit" value="Modifier" name="form[save]" class="btn btn-primary float-right">
                                <input type="hidden" name="form[_token]" value="{{ form._token.vars.value }}" />
                            </div>
                            {{ form_start(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </section>
    <!-- /.content-wrapper -->

    {%endblock%}


