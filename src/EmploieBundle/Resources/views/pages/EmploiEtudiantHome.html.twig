{% extends 'Template.html.twig' %}


{% block body%}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (pages header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Emploi</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Emploi</a></li>
                        <li class="breadcrumb-item active">classe</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Choisir la classe</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        {{ form_start(form) }}
                        <div class="card-body">
                            {{ form(form) }}
                                <input type="submit" value="Suivant" style="margin-top: 20px" class="btn btn-primary float-right">
                                <input type="hidden" name="form[_token]" value="{{ form._token.vars.value }}" />
                            </div>
                            {{ form_start(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </section>
    <!-- /.content-wrapper -->

    {%endblock%}


